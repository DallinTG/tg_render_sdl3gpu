#include <metal_stdlib>
#include <simd/simd.h>

using namespace metal;

struct type_UBO
{
    float4x4 mvp;
};

struct Vertex
{
    packed_float3 pos;
    float pad_1;
    float4 color;
    float2 uv;
    uint img_index;
    uint layer;
    float4 color2;
};

struct type_StructuredBuffer_Vertex
{
    Vertex _m0[1];
};

struct type_StructuredBuffer_uint
{
    uint _m0[1];
};

struct main0_out
{
    float4 out_var_TEXCOORD0 [[user(locn0)]];
    float2 out_var_TEXCOORD1 [[user(locn1)]];
    uint out_var_TEXCOORD2 [[user(locn2)]];
    uint out_var_TEXCOORD3 [[user(locn3)]];
    float4 out_var_TEXCOORD4 [[user(locn4)]];
    float4 gl_Position [[position]];
};

vertex main0_out main0(constant type_UBO& UBO [[buffer(0)]], const device type_StructuredBuffer_Vertex& Vertices [[buffer(1)]], const device type_StructuredBuffer_uint& Indices [[buffer(2)]], uint gl_VertexIndex [[vertex_id]])
{
    main0_out out = {};
    out.gl_Position = UBO.mvp * float4(Vertices._m0[Indices._m0[gl_VertexIndex]].pos[0], Vertices._m0[Indices._m0[gl_VertexIndex]].pos[1], Vertices._m0[Indices._m0[gl_VertexIndex]].pos[2], 1.0);
    out.out_var_TEXCOORD0 = Vertices._m0[Indices._m0[gl_VertexIndex]].color;
    out.out_var_TEXCOORD1 = Vertices._m0[Indices._m0[gl_VertexIndex]].uv;
    out.out_var_TEXCOORD2 = Vertices._m0[Indices._m0[gl_VertexIndex]].img_index;
    out.out_var_TEXCOORD3 = Vertices._m0[Indices._m0[gl_VertexIndex]].layer;
    out.out_var_TEXCOORD4 = Vertices._m0[Indices._m0[gl_VertexIndex]].color2;
    return out;
}

